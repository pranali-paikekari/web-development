<div class="container">
    <span class="decor"></span>
    <h1>‚ú® Leap Year Checker ‚ú®</h1>
    <img src="leap.jpg" alt="Leap Year">
    <p>Enter a year to check if it's a leap year or not.</p>

    <label for="year">üìÖ Enter Year:</label>
    <input type="number" id="year" placeholder="Enter a year">
    <br><br>
    <button onclick="checkLeapYear()" id="checkBtn">üîç Check Leap Year</button>

    <h2 id="result"></h2>
    <span class="decor2"></span>
</div>

<script>
    function checkLeapYear() {
        var yearInput = document.getElementById('year');
        var result = document.getElementById('result');
        var button = document.getElementById('checkBtn');
        var year = parseInt(yearInput.value);

        if (isNaN(year) || year <= 0) {
            result.innerHTML = "‚ùå Please enter a valid year!";
            result.style.color = "red";
            result.classList.add("show");
            return;
        }

        // Add a loading effect
        button.innerHTML = "‚è≥ Checking...";
        button.disabled = true;

        setTimeout(() => {
            if ((year % 4 === 0 && year % 100 !== 0) || (year % 400 === 0)) {
                result.innerHTML = `üéâ ${year} is a Leap Year! ‚úÖ`;
                result.style.color = "green";
            } else {
                result.innerHTML = `‚ùå ${year} is NOT a Leap Year!`;
                result.style.color = "red";
            }
            result.classList.add("show");
            button.innerHTML = "üîç Check Leap Year";
            button.disabled = false;
        }, 1000);
    }
</script>
